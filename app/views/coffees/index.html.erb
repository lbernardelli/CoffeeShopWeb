<%= render 'shared/navigation', active: :coffees %>

<div class="bg-white py-12 border-b">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-5xl font-bold text-gray-900 mb-4">Our Coffee Collection</h1>
    <p class="text-xl text-gray-600">Explore our carefully curated selection of premium coffee beans from around the world</p>
  </div>
</div>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 bg-gray-50 min-h-screen">
  <div class="flex gap-8">
    <div class="w-64 flex-shrink-0 hidden lg:block">
      <div class="bg-white rounded-xl shadow-sm p-6 sticky top-24">
        <h3 class="font-bold text-lg text-gray-900 mb-4">Filters</h3>

        <div class="mb-6">
          <h4 class="font-semibold text-gray-900 mb-3">Roast Type</h4>
          <div class="space-y-2">
            <%= link_to coffees_path, class: "flex items-center hover:text-amber-600 #{params[:roast_type].blank? ? 'text-amber-600' : 'text-gray-700'}" do %>
              <span>All Roasts</span>
            <% end %>
            <%= link_to coffees_path(roast_type: "light"), class: "flex items-center hover:text-amber-600 #{params[:roast_type] == 'light' ? 'text-amber-600 font-semibold' : 'text-gray-700'}" do %>
              <span>Light Roast</span>
            <% end %>
            <%= link_to coffees_path(roast_type: "medium"), class: "flex items-center hover:text-amber-600 #{params[:roast_type] == 'medium' ? 'text-amber-600 font-semibold' : 'text-gray-700'}" do %>
              <span>Medium Roast</span>
            <% end %>
            <%= link_to coffees_path(roast_type: "dark"), class: "flex items-center hover:text-amber-600 #{params[:roast_type] == 'dark' ? 'text-amber-600 font-semibold' : 'text-gray-700'}" do %>
              <span>Dark Roast</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="flex-1">
      <div class="flex justify-between items-center mb-6">
        <p class="text-gray-600">Showing <span class="font-semibold"><%= @coffees.count %></span> coffees</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
        <% @coffees.each_with_index do |coffee, index| %>
          <div class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-lg transition" data-controller="coffee-card">
            <div class="h-48 <%= coffee_gradient_class(index) %> flex items-center justify-center relative">
              <svg class="w-24 h-24 text-white opacity-90" fill="currentColor" viewBox="0 0 20 20">
                <path d="M8 16a2 2 0 002-2H6a2 2 0 002 2zM8 1.918l-.797.161A4.002 4.002 0 003 6c0 .628.134 2.197.459 3.742.16.767.376 1.566.663 2.258h6.756c.287-.692.502-1.49.663-2.258C12.866 8.197 13 6.628 13 6a4.002 4.002 0 00-4.203-3.92L8 1.917zM14.22 12c.223.447.482.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 111.99 0A5.002 5.002 0 0113 6c0 .88.32 4.2 1.22 6z"/>
              </svg>
              <% if coffee.starting_price > 25 %>
                <span class="absolute top-3 right-3 bg-amber-600 text-white px-2 py-1 rounded-full text-xs font-semibold">
                  Premium
                </span>
              <% elsif coffee.starting_price < 16 %>
                <span class="absolute top-3 right-3 bg-green-600 text-white px-2 py-1 rounded-full text-xs font-semibold">
                  Best Value
                </span>
              <% end %>
            </div>
            <div class="p-4">
              <span class="text-xs text-gray-500 font-semibold uppercase"><%= coffee.roast_type&.titleize || "Medium" %> Roast</span>
              <h3 class="text-lg font-bold text-gray-900 mt-1 mb-2"><%= coffee.name %></h3>
              <p class="text-sm text-gray-600 mb-3 line-clamp-2"><%= coffee.description&.truncate(60) || "Premium coffee beans" %></p>

              <div class="mb-3">
                <label class="text-xs font-semibold text-gray-700 mb-1 block">Size:</label>
                <div class="flex gap-2">
                  <% coffee.coffee_variants.each do |variant| %>
                    <div class="flex-1 text-center">
                      <div class="px-2 py-1 border-2 border-gray-200 rounded-lg hover:border-amber-600 cursor-pointer transition"
                           data-coffee-card-target="variant"
                           data-variant-id="<%= variant.id %>"
                           data-action="click->coffee-card#selectVariant">
                        <div class="text-xs font-semibold text-gray-700"><%= variant.size.titleize %></div>
                        <div class="text-sm font-bold text-amber-600">$<%= number_with_precision(variant.price, precision: 2) %></div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>

              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-600">From <span class="text-2xl font-bold text-amber-600">$<%= number_with_precision(coffee.starting_price, precision: 2) %></span></span>
                <%= form_with url: add_item_cart_path, method: :post, class: "inline" do |f| %>
                  <%= f.hidden_field :coffee_variant_id, value: coffee.coffee_variants.first&.id, data: { coffee_card_target: "variantInput" } %>
                  <%= f.submit "Add", class: "bg-amber-600 text-white px-4 py-2 rounded-lg hover:bg-amber-700 transition text-sm font-semibold cursor-pointer" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <% if @coffees.empty? %>
        <div class="text-center py-12">
          <p class="text-gray-600 text-lg">No coffees found matching your criteria.</p>
          <%= link_to "Clear filters", coffees_path, class: "mt-4 inline-block text-amber-600 hover:text-amber-700 font-semibold" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render 'shared/footer' %>

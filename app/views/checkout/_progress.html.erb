<div class="mb-8">
  <div class="flex items-center justify-center gap-4">
    <div class="flex items-center">
      <% if step >= 2 %>
        <div class="w-10 h-10 bg-green-600 text-white rounded-full flex items-center justify-center">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
      <% else %>
        <div class="w-10 h-10 <%= step == 1 ? 'bg-amber-600' : 'bg-gray-300' %> text-white rounded-full flex items-center justify-center font-bold">
          1
        </div>
      <% end %>
      <span class="ml-2 <%= step == 1 ? 'font-semibold text-amber-600' : 'text-gray-600' %>">Shipping</span>
    </div>

    <div class="w-16 h-1 <%= step >= 2 ? 'bg-amber-600' : 'bg-gray-300' %>"></div>

    <div class="flex items-center">
      <% if step >= 3 %>
        <div class="w-10 h-10 bg-green-600 text-white rounded-full flex items-center justify-center">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
      <% else %>
        <div class="w-10 h-10 <%= step == 2 ? 'bg-amber-600' : 'bg-gray-300' %> text-white rounded-full flex items-center justify-center font-bold">
          2
        </div>
      <% end %>
      <span class="ml-2 <%= step == 2 ? 'font-semibold text-amber-600' : 'text-gray-600' %>">Payment</span>
    </div>

    <div class="w-16 h-1 <%= step >= 3 ? 'bg-green-600' : 'bg-gray-300' %>"></div>

    <div class="flex items-center">
      <% if step >= 3 %>
        <div class="w-10 h-10 bg-green-600 text-white rounded-full flex items-center justify-center">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
      <% else %>
        <div class="w-10 h-10 bg-gray-300 text-white rounded-full flex items-center justify-center font-bold">
          3
        </div>
      <% end %>
      <span class="ml-2 <%= step == 3 ? 'font-semibold text-green-600' : 'text-gray-500' %>">Confirmation</span>
    </div>
  </div>
</div>

<div class="min-h-screen bg-gradient-to-br from-amber-50 via-orange-50 to-red-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-2">
        <span class="text-amber-600">☕</span> CoffeeShop
      </h1>
      <p class="text-gray-600">Set a new password</p>
    </div>

    <% if alert = flash[:alert] %>
      <div class="mb-4 p-4 bg-red-50 border-l-4 border-red-500 rounded-lg" id="alert">
        <p class="text-red-700"><%= alert %></p>
      </div>
    <% end %>

    <div class="bg-white rounded-2xl shadow-xl p-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-2">Update your password</h2>
      <p class="text-gray-600 mb-6">Please enter your new password below.</p>

      <%= form_with url: password_path(params[:token]), method: :put, class: "space-y-6" do |form| %>
        <div>
          <%= form.label :password, "New Password", class: "block text-sm font-semibold text-gray-900 mb-2" %>
          <%= form.password_field :password,
              required: true,
              autofocus: true,
              autocomplete: "new-password",
              placeholder: "Enter new password",
              maxlength: 72,
              class: "block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent transition" %>
        </div>

        <div>
          <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-semibold text-gray-900 mb-2" %>
          <%= form.password_field :password_confirmation,
              required: true,
              autocomplete: "new-password",
              placeholder: "Confirm new password",
              maxlength: 72,
              class: "block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent transition" %>
        </div>

        <div>
          <%= form.submit "Update password", class: "w-full bg-amber-600 text-white py-3 rounded-lg font-semibold hover:bg-amber-700 transition shadow-lg hover:shadow-xl cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-6 text-center">
        <%= link_to "← Back to sign in", new_session_path, class: "font-semibold text-amber-600 hover:text-amber-700" %>
      </div>
    </div>

    <!-- Footer -->
    <p class="mt-8 text-center text-sm text-gray-600">
      &copy; 2025 CoffeeShop. All rights reserved.
    </p>
  </div>
</div>

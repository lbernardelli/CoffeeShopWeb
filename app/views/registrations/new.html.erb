<div class="min-h-screen bg-gradient-to-br from-amber-50 via-orange-50 to-red-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-2">
        <span class="text-amber-600">☕</span> CoffeeShop
      </h1>
      <p class="text-gray-600">Create your account</p>
    </div>

    <% if alert = flash[:alert] %>
      <div class="mb-4 p-4 bg-red-50 border-l-4 border-red-500 rounded-lg" id="alert">
        <p class="text-red-700"><%= alert %></p>
      </div>
    <% end %>

    <div class="bg-white rounded-2xl shadow-xl p-8">
      <%= form_with model: @user, url: registration_path, class: "space-y-6" do |form| %>
        <% if @user.errors.any? %>
          <div class="bg-red-50 border-l-4 border-red-500 rounded-lg p-4 mb-6">
            <h3 class="text-red-800 font-semibold mb-2">
              <%= pluralize(@user.errors.count, "error") %> prohibited this account from being saved:
            </h3>
            <ul class="list-disc list-inside text-red-700 space-y-1">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= form.label :email_address, "Email Address", class: "block text-sm font-semibold text-gray-900 mb-2" %>
          <%= form.email_field :email_address,
              required: true,
              autofocus: true,
              autocomplete: "username",
              placeholder: "your@email.com",
              class: "block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent transition" %>
        </div>

        <div>
          <%= form.label :password, "Password", class: "block text-sm font-semibold text-gray-900 mb-2" %>
          <%= form.password_field :password,
              required: true,
              autocomplete: "new-password",
              placeholder: "Create a password (min 8 characters)",
              minlength: 8,
              maxlength: 72,
              class: "block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent transition" %>
          <p class="mt-1 text-sm text-gray-500">Must be at least 8 characters</p>
        </div>

        <div>
          <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-semibold text-gray-900 mb-2" %>
          <%= form.password_field :password_confirmation,
              required: true,
              autocomplete: "new-password",
              placeholder: "Confirm your password",
              minlength: 8,
              maxlength: 72,
              class: "block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent transition" %>
        </div>

        <div>
          <%= form.submit "Create Account", class: "w-full bg-amber-600 text-white py-3 rounded-lg font-semibold hover:bg-amber-700 transition shadow-lg hover:shadow-xl cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">Already have an account?</span>
          </div>
        </div>
      </div>

      <div class="mt-6 text-center">
        <%= link_to "Sign in →", new_session_path, class: "font-semibold text-amber-600 hover:text-amber-700" %>
      </div>
    </div>

    <p class="mt-8 text-center text-sm text-gray-600">
      &copy; 2025 CoffeeShop. All rights reserved.
    </p>
  </div>
</div>

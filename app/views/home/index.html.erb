<%= render 'shared/navigation', active: :home %>

<div class="bg-gradient-to-br from-amber-50 via-orange-50 to-red-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
    <div class="text-center">
      <h1 class="text-6xl md:text-7xl font-bold text-gray-900 mb-6">
        Premium Coffee
        <span class="block text-transparent bg-clip-text bg-gradient-to-r from-amber-600 to-orange-600">
          Delivered Fresh
        </span>
      </h1>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        Discover our selection of artisan coffee beans, expertly roasted and delivered to your door
      </p>
      <div class="flex gap-4 justify-center">
        <%= link_to "Shop Now", coffees_path, class: "bg-amber-600 text-white px-8 py-4 rounded-xl font-semibold hover:bg-amber-700 transition shadow-lg hover:shadow-xl" %>
        <a href="#about" class="bg-white text-gray-900 px-8 py-4 rounded-xl font-semibold hover:bg-gray-50 transition border-2 border-gray-200 shadow-sm">
          Learn More
        </a>
      </div>
    </div>
  </div>
</div>

<div class="bg-gray-900 text-white py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
      <div>
        <div class="text-4xl font-bold text-amber-400 mb-2">50+</div>
        <div class="text-gray-300">Coffee Varieties</div>
      </div>
      <div>
        <div class="text-4xl font-bold text-amber-400 mb-2">10k+</div>
        <div class="text-gray-300">Happy Customers</div>
      </div>
      <div>
        <div class="text-4xl font-bold text-amber-400 mb-2">15</div>
        <div class="text-gray-300">Countries Sourced</div>
      </div>
      <div>
        <div class="text-4xl font-bold text-amber-400 mb-2">100%</div>
        <div class="text-gray-300">Organic</div>
      </div>
    </div>
  </div>
</div>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
  <div class="text-center mb-12">
    <h2 class="text-5xl font-bold text-gray-900 mb-4">Featured Coffees</h2>
    <p class="text-xl text-gray-600">Our most popular selections this month</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <% @featured_coffees.each_with_index do |coffee, index| %>
      <div class="group bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
        <div class="relative h-64 <%= coffee_gradient_class(index) %> flex items-center justify-center overflow-hidden">
          <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-10 transition-opacity"></div>
          <svg class="w-32 h-32 text-white opacity-90" fill="currentColor" viewBox="0 0 20 20">
            <path d="M8 16a2 2 0 002-2H6a2 2 0 002 2zM8 1.918l-.797.161A4.002 4.002 0 003 6c0 .628.134 2.197.459 3.742.16.767.376 1.566.663 2.258h6.756c.287-.692.502-1.49.663-2.258C12.866 8.197 13 6.628 13 6a4.002 4.002 0 00-4.203-3.92L8 1.917zM14.22 12c.223.447.482.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 111.99 0A5.002 5.002 0 0113 6c0 .88.32 4.2 1.22 6z"/>
          </svg>
          <% if coffee.starting_price > 25 %>
            <div class="absolute top-4 right-4 bg-amber-600 text-white px-3 py-1 rounded-full text-sm font-semibold">
              Premium
            </div>
          <% elsif index == 0 %>
            <div class="absolute top-4 right-4 bg-amber-600 text-white px-3 py-1 rounded-full text-sm font-semibold">
              Bestseller
            </div>
          <% end %>
        </div>
        <div class="p-6">
          <div class="flex items-center gap-2 mb-3">
            <span class="text-xs font-semibold text-amber-600 uppercase"><%= coffee.roast_type&.titleize || "Medium" %> Roast</span>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-3"><%= coffee.name %></h3>
          <p class="text-gray-600 mb-6 line-clamp-2"><%= coffee.description&.truncate(100) || "Premium coffee beans from around the world" %></p>
          <div class="flex items-center justify-between">
            <div>
              <span class="text-sm text-gray-500">Starting at</span>
              <div class="text-3xl font-bold text-amber-600">$<%= number_with_precision(coffee.starting_price, precision: 2) %></div>
            </div>
            <%= link_to "View Details", coffees_path, class: "bg-amber-600 text-white px-6 py-3 rounded-lg hover:bg-amber-700 transition font-semibold" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-12">
    <%= link_to "View All Coffees", coffees_path, class: "inline-block bg-gray-900 text-white px-8 py-4 rounded-xl font-semibold hover:bg-gray-800 transition" %>
  </div>
</div>

<div id="about" class="bg-gray-50 py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <div>
        <h2 class="text-4xl font-bold text-gray-900 mb-6">Why Choose Us?</h2>
        <div class="space-y-6">
          <div class="flex gap-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-amber-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">Premium Quality</h3>
              <p class="text-gray-600">Hand-selected beans from the world's finest coffee regions</p>
            </div>
          </div>
          <div class="flex gap-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-amber-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">Fresh Roasted</h3>
              <p class="text-gray-600">Roasted to order and shipped within 24 hours</p>
            </div>
          </div>
          <div class="flex gap-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-amber-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">Fair Trade</h3>
              <p class="text-gray-600">Supporting farmers with sustainable practices</p>
            </div>
          </div>
        </div>
      </div>
      <div class="relative">
        <div class="aspect-square rounded-2xl bg-gradient-to-br from-amber-200 via-orange-300 to-red-300 flex items-center justify-center">
          <svg class="w-64 h-64 text-white opacity-90" fill="currentColor" viewBox="0 0 20 20">
            <path d="M8 16a2 2 0 002-2H6a2 2 0 002 2zM8 1.918l-.797.161A4.002 4.002 0 003 6c0 .628.134 2.197.459 3.742.16.767.376 1.566.663 2.258h6.756c.287-.692.502-1.49.663-2.258C12.866 8.197 13 6.628 13 6a4.002 4.002 0 00-4.203-3.92L8 1.917zM14.22 12c.223.447.482.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 111.99 0A5.002 5.002 0 0113 6c0 .88.32 4.2 1.22 6z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/footer' %>

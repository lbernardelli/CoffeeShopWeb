<nav class="bg-white shadow-sm sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <%= link_to root_path, class: "text-2xl font-bold text-amber-600" do %>
          ☕ CoffeeShop
        <% end %>
      </div>
      <div class="hidden md:flex space-x-8">
        <%= link_to "Home", root_path, class: "text-gray-600 hover:text-gray-900" %>
        <%= link_to "Products", coffees_path, class: "text-gray-600 hover:text-gray-900" %>
        <%= link_to "Cart (#{@cart.order_items.sum(:quantity)})", cart_path, class: "text-gray-900 font-semibold border-b-2 border-amber-600" %>
        <a href="#" class="text-gray-600 hover:text-gray-900">Orders</a>
      </div>
      <div class="flex items-center space-x-4">
        <% if Current.user %>
          <span class="text-gray-600"><%= Current.user.email_address %></span>
          <%= button_to "Logout", session_path, method: :delete, class: "text-gray-600 hover:text-gray-900" %>
        <% else %>
          <%= link_to "Login", new_session_path, class: "text-gray-600 hover:text-gray-900" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 bg-gray-50 min-h-screen">
  <h1 class="text-4xl font-bold text-gray-900 mb-8">Shopping Cart</h1>

  <% if @order_items.any? %>
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Cart Items -->
      <div class="lg:col-span-2 space-y-4">
        <% @order_items.each do |item| %>
          <div class="bg-white rounded-xl shadow-sm p-6 flex gap-6">
            <div class="w-32 h-32 <%= coffee_gradient_class(@order_items.index(item)) %> rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-16 h-16 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M8 16a2 2 0 002-2H6a2 2 0 002 2zM8 1.918l-.797.161A4.002 4.002 0 003 6c0 .628.134 2.197.459 3.742.16.767.376 1.566.663 2.258h6.756c.287-.692.502-1.49.663-2.258C12.866 8.197 13 6.628 13 6a4.002 4.002 0 00-4.203-3.92L8 1.917zM14.22 12c.223.447.482.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 111.99 0A5.002 5.002 0 0113 6c0 .88.32 4.2 1.22 6z"/>
              </svg>
            </div>
            <div class="flex-1">
              <div class="flex justify-between items-start mb-2">
                <div>
                  <h3 class="text-xl font-bold text-gray-900"><%= item.coffee_name %></h3>
                  <p class="text-gray-600"><%= item.coffee_variant.coffee.roast_type&.titleize || "Medium" %> Roast • <%= item.size.titleize %></p>
                </div>
                <%= button_to remove_item_cart_path(order_item_id: item.id), method: :delete, class: "text-gray-400 hover:text-red-600" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                <% end %>
              </div>
              <div class="flex justify-between items-center">
                <div class="flex items-center gap-3">
                  <%= button_to update_quantity_cart_path(order_item_id: item.id, quantity: item.quantity - 1), method: :patch, class: "w-8 h-8 border border-gray-300 rounded-lg hover:bg-gray-50 flex items-center justify-center" do %>
                    -
                  <% end %>
                  <span class="font-semibold text-gray-900"><%= item.quantity %></span>
                  <%= button_to update_quantity_cart_path(order_item_id: item.id, quantity: item.quantity + 1), method: :patch, class: "w-8 h-8 border border-gray-300 rounded-lg hover:bg-gray-50 flex items-center justify-center" do %>
                    +
                  <% end %>
                </div>
                <span class="text-2xl font-bold text-amber-600">$<%= number_with_precision(item.subtotal, precision: 2) %></span>
              </div>
            </div>
          </div>
        <% end %>

        <%= link_to coffees_path, class: "block text-center text-amber-600 hover:text-amber-700 font-semibold py-4" do %>
          ← Continue Shopping
        <% end %>
      </div>

      <div class="lg:col-span-1">
        <div class="bg-white rounded-xl shadow-sm p-6 sticky top-24">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Order Summary</h2>

          <div class="border-t border-gray-200 pt-4 space-y-3 mb-6">
            <div class="flex justify-between text-gray-600">
              <span>Subtotal</span>
              <span class="font-semibold">$<%= number_with_precision(@cart.total, precision: 2) %></span>
            </div>
            <div class="flex justify-between text-gray-600">
              <span>Shipping</span>
              <span class="font-semibold text-green-600"><%= @cart.total >= 50 ? 'FREE' : '$5.99' %></span>
            </div>
            <div class="flex justify-between text-gray-600">
              <span>Tax</span>
              <span class="font-semibold">$<%= number_with_precision(@cart.total * 0.09, precision: 2) %></span>
            </div>
          </div>

          <div class="border-t border-gray-200 pt-4 mb-6">
            <div class="flex justify-between items-center">
              <span class="text-xl font-bold text-gray-900">Total</span>
              <span class="text-3xl font-bold text-amber-600">
                $<%= number_with_precision(@cart.total + (@cart.total >= 50 ? 0 : 5.99) + (@cart.total * 0.09), precision: 2) %>
              </span>
            </div>
          </div>

          <%= link_to "Proceed to Checkout", checkout_shipping_path, class: "block w-full bg-amber-600 text-white py-4 rounded-xl font-bold text-lg hover:bg-amber-700 transition shadow-lg hover:shadow-xl mb-3 text-center" %>

          <div class="flex items-center justify-center gap-2 text-sm text-gray-600">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
            <span>Secure checkout</span>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="max-w-2xl mx-auto text-center py-16">
      <svg class="w-32 h-32 mx-auto text-gray-300 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
      </svg>
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Your cart is empty</h2>
      <p class="text-gray-600 mb-8">Start adding some delicious coffee to your cart!</p>
      <%= link_to "Browse Coffees", coffees_path, class: "inline-block bg-amber-600 text-white px-8 py-4 rounded-xl font-semibold hover:bg-amber-700 transition shadow-lg" %>
    </div>
  <% end %>
</div>

<footer class="bg-gray-50 py-12 border-t">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <p class="text-gray-600">&copy; 2025 CoffeeShop. All rights reserved.</p>
  </div>
</footer>

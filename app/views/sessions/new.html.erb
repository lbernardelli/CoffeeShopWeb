<div class="min-h-screen bg-gradient-to-br from-amber-50 via-orange-50 to-red-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-2">
        <span class="text-amber-600">☕</span> CoffeeShop
      </h1>
      <p class="text-gray-600">Sign in to your account</p>
    </div>

    <% if alert = flash[:alert] %>
      <div class="mb-4 p-4 bg-red-50 border-l-4 border-red-500 rounded-lg" id="alert">
        <p class="text-red-700"><%= alert %></p>
      </div>
    <% end %>

    <% if notice = flash[:notice] %>
      <div class="mb-4 p-4 bg-green-50 border-l-4 border-green-500 rounded-lg" id="notice">
        <p class="text-green-700"><%= notice %></p>
      </div>
    <% end %>

    <div class="bg-white rounded-2xl shadow-xl p-8">
      <%= form_with url: session_url, class: "space-y-6" do |form| %>
        <div>
          <%= form.label :email_address, "Email Address", class: "block text-sm font-semibold text-gray-900 mb-2" %>
          <%= form.email_field :email_address,
              required: true,
              autofocus: true,
              autocomplete: "username",
              placeholder: "your@email.com",
              value: params[:email_address],
              class: "block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent transition" %>
        </div>

        <div>
          <%= form.label :password, "Password", class: "block text-sm font-semibold text-gray-900 mb-2" %>
          <%= form.password_field :password,
              required: true,
              autocomplete: "current-password",
              placeholder: "Enter your password",
              maxlength: 72,
              class: "block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent transition" %>
        </div>

        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <%= form.check_box :remember_me, class: "h-4 w-4 text-amber-600 focus:ring-amber-500 border-gray-300 rounded" %>
            <%= form.label :remember_me, "Remember me", class: "ml-2 block text-sm text-gray-700" %>
          </div>
          <%= link_to "Forgot password?", new_password_path, class: "text-sm font-semibold text-amber-600 hover:text-amber-700" %>
        </div>

        <div>
          <%= form.submit "Sign in", class: "w-full bg-amber-600 text-white py-3 rounded-lg font-semibold hover:bg-amber-700 transition shadow-lg hover:shadow-xl cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">New to CoffeeShop?</span>
          </div>
        </div>
      </div>

      <div class="mt-6 text-center">
        <a href="#" class="font-semibold text-amber-600 hover:text-amber-700">
          Create an account →
        </a>
      </div>
    </div>

    <p class="mt-8 text-center text-sm text-gray-600">
      &copy; 2025 CoffeeShop. All rights reserved.
    </p>
  </div>
</div>
